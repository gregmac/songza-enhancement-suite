{
  "manifest_version": 2,

  "name": "Songza Buy",
  "description": "Buy songs on itunes",
  "version": "1.0",
  "background": { "scripts": ["jquery-1.8.3.min.js", "background.js"] },
  "content_scripts": [
    {
      "matches": ["http://songza.com/*"],
      "js": ["buy-button.js"],
      "css": ["test.css"]
    }
  ],
  "permissions": [
    "http://itunes.apple.com/"
  ]
}